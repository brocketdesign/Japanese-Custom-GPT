<!-- Character Update Form -->
<div class="character-update-header">
    <h5 class="modal-title">
        <i class="bi bi-person-gear me-2"></i>
        {{translations.characterUpdate.title}}
    </h5>
    <div class="character-info">
        <img id="characterImage" class="character-image" src="/img/default-character.png" alt="Character" style="display: none;">
        <div class="character-details">
            <h6 id="characterName">
                <i class="bi bi-person-circle me-2"></i>
                Loading...
            </h6>
            <p>
                <i class="bi bi-gender-ambiguous me-1"></i>
                <span id="characterGender">Unknown</span> • 
                <i class="bi bi-clock-history ms-2 me-1"></i>
                {{translations.characterUpdate.lastModified}}: <span id="characterUpdatedAt">-</span>
            </p>
            <p class="mb-0">
                <small class="text-muted">
                    <i class="bi bi-chat-dots me-1"></i>
                    {{translations.characterUpdate.messagesCount}}: <span id="characterMessagesCount">0</span> • 
                    <i class="bi bi-images ms-2 me-1"></i>
                    {{translations.characterUpdate.imageCount}}: <span id="characterImageCount">0</span>
                </small>
            </p>
        </div>
    </div>
</div>

<form class="character-update-form pt-3">
    <!-- Basic Information Section -->
    <div class="form-section basic-info-section">
        <div class="form-section-header" data-bs-toggle="collapse" data-bs-target="#basicInfoSection">
            <span>
                <i class="bi bi-info-circle me-2"></i>
                {{translations.characterUpdate.basicInformation}}
            </span>
            <i class="bi bi-chevron-down"></i>
        </div>
        <div id="basicInfoSection" class="collapse show">
            <div class="form-section-content">
                <div class="row">
                    <div class="col-md-6">
                        <label for="basic_name" class="form-label">
                            <i class="bi bi-person me-1"></i>
                            {{translations.characterUpdate.characterName}}
                        </label>
                        <input type="text" class="form-control" id="basic_name" name="basic_name" placeholder="Enter character name">
                    </div>
                    <div class="col-md-6">
                        <label for="basic_slug" class="form-label">
                            <i class="bi bi-link me-1"></i>
                            {{translations.characterUpdate.slug}}
                        </label>
                        <input type="text" class="form-control" id="basic_slug" name="basic_slug" placeholder="character-url-slug" readonly>
                        <div class="field-description">
                            <i class="bi bi-info-circle me-1"></i>
                            {{translations.characterUpdate.slugHelp}}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <label for="basic_short_intro" class="form-label">
                            <i class="bi bi-chat-quote me-1"></i>
                            {{translations.characterUpdate.shortIntro}}
                        </label>
                        <textarea class="form-control" id="basic_short_intro" name="basic_short_intro" rows="2" placeholder="{{translations.characterUpdate.shortIntroPlaceholder}}"></textarea>
                        <div class="field-description">
                            <i class="bi bi-info-circle me-1"></i>
                            {{translations.characterUpdate.shortIntroHelp}}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <label for="basic_description" class="form-label">
                            <i class="bi bi-card-text me-1"></i>
                            {{translations.characterUpdate.description}}
                        </label>
                        <textarea class="form-control" id="basic_description" name="basic_description" rows="4" placeholder="{{translations.characterUpdate.descriptionPlaceholder}}"></textarea>
                        <div class="field-description">
                            <i class="bi bi-info-circle me-1"></i>
                            {{translations.characterUpdate.descriptionHelp}}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label for="basic_gender" class="form-label">
                            <i class="bi bi-gender-ambiguous me-1"></i>
                            {{translations.characterUpdate.gender}}
                        </label>
                        <select class="form-select" id="basic_gender" name="basic_gender">
                            <option value="">{{translations.characterUpdate.selectOption}}</option>
                            <option value="male">{{translations.characterUpdate.male}}</option>
                            <option value="female">{{translations.characterUpdate.female}}</option>
                            <option value="non-binary">{{translations.characterUpdate.nonBinary}}</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="basic_nsfw" class="form-label fw-semibold">{{translations.newCharacter.contentRating}}</label>
                            <select class="form-select" id="basic_nsfw" name="basic_nsfw">
                                <option value="false">{{translations.newCharacter.sfw}}</option>
                                <option value="true">{{translations.newCharacter.nsfw}}</option>
                            </select>
                            <small class="text-muted">{{translations.newCharacter.nsfwDescription}}</small>
                            
                            <!-- Premium prompt for updates -->
                            <div id="nsfwPremiumPrompt" class="mt-2" style="display: none;">
                                <div class="alert alert-warning py-2">
                                    <i class="bi bi-star me-2"></i>{{translations.newCharacter.nsfwPremiumRequired}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

