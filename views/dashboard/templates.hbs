<!DOCTYPE html>
<html>
{{> dashboard-header}}
<body class="bg-dark">
    {{> dashboard-nav}}
    <link rel="stylesheet" href="/css/dashboard-posts.css">
    <link rel="stylesheet" href="/css/dashboard-templates.css">
    
    <section class="container-fluid py-4">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
                    <div class="flex-grow-1">
                        <h1 class="text-white mb-1">
                            <i class="bi bi-file-text me-2"></i>{{translations.dashboard.promptTemplates}}
                        </h1>
                        <p class="text-muted mb-0">{{translations.dashboard.promptTemplatesDescription}}</p>
                    </div>
                    <div class="d-flex gap-2 w-100 w-md-auto">
                        <button class="btn btn-primary flex-fill flex-md-grow-0" onclick="templatesDashboard.openCreateModal()">
                            <i class="bi bi-plus-circle me-1"></i>{{translations.dashboard.newTemplate}}
                        </button>
                        <button class="btn btn-outline-info flex-fill flex-md-grow-0" onclick="templatesDashboard.openMutateModal()">
                            <i class="bi bi-magic me-1"></i>{{translations.dashboard.mutatePrompt}}
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Mutation Panel -->
        <div class="card bg-dark border-primary mb-4">
            <div class="card-header bg-primary bg-opacity-25">
                <h5 class="mb-0 text-white">
                    <i class="bi bi-magic me-2"></i>{{translations.dashboard.quickPromptMutation}}
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <label class="form-label text-white">{{translations.dashboard.inputPrompt}}</label>
                        <textarea class="form-control bg-secondary text-white border-secondary" id="mutateInputPrompt" rows="8" placeholder="{{translations.dashboard.enterPromptToMutate}}"></textarea>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-white">{{translations.dashboard.mutatedPrompt}}</label>
                        <textarea class="form-control bg-dark text-success border-secondary" id="mutatedOutput" rows="8" readonly placeholder="{{translations.dashboard.mutatedPromptAppears}}"></textarea>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-3 mb-2">
                        <label class="form-label text-white small">{{translations.dashboard.style}}</label>
                        <select id="mutateStyle" class="form-select form-select-sm bg-secondary text-white border-secondary">
                            <option value="">{{translations.dashboard.none}}</option>
                            <option value="anime">{{translations.dashboard.anime}}</option>
                            <option value="photorealistic">{{translations.dashboard.photorealistic}}</option>
                            <option value="artistic">{{translations.dashboard.artistic}}</option>
                            <option value="cinematic">{{translations.dashboard.cinematic}}</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-2">
                        <label class="form-label text-white small">{{translations.dashboard.quality}}</label>
                        <select id="mutateQuality" class="form-select form-select-sm bg-secondary text-white border-secondary">
                            <option value="">{{translations.dashboard.none}}</option>
                            <option value="high">{{translations.dashboard.highQuality}}</option>
                            <option value="ultra">{{translations.dashboard.ultraQuality}}</option>
                            <option value="professional">{{translations.dashboard.professional}}</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-2">
                        <div class="form-check mt-4">
                            <input class="form-check-input" type="checkbox" id="randomAdjectives">
                            <label class="form-check-label text-white" for="randomAdjectives">
                                {{translations.dashboard.addRandomAdjectives}}
                            </label>
                        </div>
                    </div>
                    <div class="col-md-3 mb-2 d-flex align-items-end">
                        <button class="btn btn-primary w-100" onclick="templatesDashboard.mutatePrompt()">
                            <i class="bi bi-lightning me-1"></i>{{translations.dashboard.mutate}}
                        </button>
                    </div>
                </div>
                <div class="mt-3 d-flex gap-2">
                    <button class="btn btn-sm btn-outline-success" onclick="templatesDashboard.copyMutated()">
                        <i class="bi bi-clipboard me-1"></i>{{translations.dashboard.copy}}
                    </button>
                    <button class="btn btn-sm btn-outline-warning" onclick="templatesDashboard.generateVariations()">
                        <i class="bi bi-shuffle me-1"></i>{{translations.dashboard.generateVariations}}
                    </button>
                    <button class="btn btn-sm btn-outline-info" onclick="templatesDashboard.useInImageDashboard()">
                        <i class="bi bi-image me-1"></i>{{translations.dashboard.useInImageDashboard}}
                    </button>
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="card bg-dark border-secondary mb-4">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label text-white">{{translations.dashboard.category}}</label>
                        <select id="filterCategory" class="form-select bg-dark text-white border-secondary">
                            <option value="">{{translations.dashboard.all}}</option>
                            <option value="character">{{translations.dashboard.character}}</option>
                            <option value="landscape">{{translations.dashboard.landscape}}</option>
                            <option value="abstract">{{translations.dashboard.abstract}}</option>
                            <option value="portrait">{{translations.dashboard.portrait}}</option>
                            <option value="other">{{translations.dashboard.other}}</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label text-white">{{translations.dashboard.styleCategory}}</label>
                        <select id="filterStyleCategory" class="form-select bg-dark text-white border-secondary">
                            <option value="">{{translations.dashboard.all}}</option>
                            <option value="anime">{{translations.dashboard.anime}}</option>
                            <option value="photorealistic">{{translations.dashboard.photorealistic}}</option>
                            <option value="artistic">{{translations.dashboard.artistic}}</option>
                            <option value="cinematic">{{translations.dashboard.cinematic}}</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label text-white">{{translations.dashboard.source}}</label>
                        <select id="filterSource" class="form-select bg-dark text-white border-secondary">
                            <option value="">{{translations.dashboard.all}}</option>
                            <option value="mine">{{translations.dashboard.myTemplates}}</option>
                            <option value="system">{{translations.dashboard.systemTemplates}}</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button class="btn btn-outline-info w-100" id="resetFiltersBtn">
                            <i class="bi bi-arrow-clockwise me-1"></i>{{translations.dashboard.reset}}
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Templates Grid -->
        <div id="templatesGrid" class="row g-4 mb-4">
            <!-- Templates will be loaded here via JavaScript -->
        </div>

        <!-- Loading Spinner -->
        <div id="loadingSpinner" class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">{{translations.dashboard.loading}}</span>
            </div>
        </div>

        <!-- No Templates Message -->
        <div id="noTemplates" class="text-center py-5" style="display: none;">
            <i class="bi bi-file-earmark-x fs-1 text-muted"></i>
            <h3 class="text-white mt-3">{{translations.dashboard.noTemplates}}</h3>
            <p class="text-muted">{{translations.dashboard.noTemplatesDescription}}</p>
            <button class="btn btn-primary mt-3" onclick="templatesDashboard.openCreateModal()">
                <i class="bi bi-plus-circle me-1"></i>{{translations.dashboard.createFirstTemplate}}
            </button>
        </div>

        <!-- Pagination -->
        <div id="pagination" class="d-flex justify-content-center mt-4"></div>
    </section>

    <!-- Create/Edit Template Modal -->
    <div class="modal fade" id="templateModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="false">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content bg-dark text-white border-secondary">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title" id="templateModalTitle">
                        <i class="bi bi-plus-circle me-2"></i>{{translations.dashboard.newTemplate}}
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="templateId">
                    
                    <!-- Template Name -->
                    <div class="mb-3">
                        <label class="form-label">{{translations.dashboard.templateName}}</label>
                        <input type="text" class="form-control bg-secondary text-white border-secondary" id="templateName" placeholder="{{translations.dashboard.templateNamePlaceholder}}">
                    </div>

                    <!-- Base Prompt -->
                    <div class="mb-3">
                        <label class="form-label">{{translations.dashboard.basePrompt}}</label>
                        <textarea class="form-control bg-secondary text-white border-secondary" id="basePrompt" rows="8" placeholder="{{translations.dashboard.basePromptPlaceholder}}"></textarea>
                        <small class="text-muted">{{translations.dashboard.basePromptHelp}}</small>
                    </div>

                    <!-- Categories -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">{{translations.dashboard.category}}</label>
                            <select id="templateCategory" class="form-select bg-secondary text-white border-secondary">
                                <option value="character">{{translations.dashboard.character}}</option>
                                <option value="landscape">{{translations.dashboard.landscape}}</option>
                                <option value="abstract">{{translations.dashboard.abstract}}</option>
                                <option value="portrait">{{translations.dashboard.portrait}}</option>
                                <option value="other">{{translations.dashboard.other}}</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">{{translations.dashboard.styleCategory}}</label>
                            <select id="templateStyleCategory" class="form-select bg-secondary text-white border-secondary">
                                <option value="">{{translations.dashboard.none}}</option>
                                <option value="anime">{{translations.dashboard.anime}}</option>
                                <option value="photorealistic">{{translations.dashboard.photorealistic}}</option>
                                <option value="artistic">{{translations.dashboard.artistic}}</option>
                                <option value="cinematic">{{translations.dashboard.cinematic}}</option>
                            </select>
                        </div>
                    </div>

                    <!-- Tags -->
                    <div class="mb-3">
                        <label class="form-label">{{translations.dashboard.tags}}</label>
                        <input type="text" class="form-control bg-secondary text-white border-secondary" id="templateTags" placeholder="{{translations.dashboard.tagsPlaceholder}}">
                        <small class="text-muted">{{translations.dashboard.tagsHelp}}</small>
                    </div>

                    <!-- Mutation Options -->
                    <div class="mb-3">
                        <label class="form-label">{{translations.dashboard.mutationOptions}}</label>
                        <div class="d-flex flex-wrap gap-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="templateAddAdjectives">
                                <label class="form-check-label" for="templateAddAdjectives">
                                    {{translations.dashboard.addAdjectives}}
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="templateAddQuality">
                                <label class="form-check-label" for="templateAddQuality">
                                    {{translations.dashboard.addQualityEnhancers}}
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="templateRandomSeed">
                                <label class="form-check-label" for="templateRandomSeed">
                                    {{translations.dashboard.randomizeSeed}}
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- NSFW Toggle -->
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="templateNsfw">
                            <label class="form-check-label" for="templateNsfw">
                                {{translations.dashboard.nsfwTemplate}}
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        {{translations.dashboard.cancel}}
                    </button>
                    <button type="button" class="btn btn-primary" onclick="templatesDashboard.saveTemplate()">
                        <i class="bi bi-check me-1"></i>{{translations.dashboard.save}}
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Variations Modal -->
    <div class="modal fade" id="variationsModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="false">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content bg-dark text-white border-secondary">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title">
                        <i class="bi bi-shuffle me-2"></i>{{translations.dashboard.promptVariations}}
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="variationsBody">
                    <!-- Variations will be loaded here -->
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        {{translations.dashboard.close}}
                    </button>
                    <button type="button" class="btn btn-primary" onclick="templatesDashboard.regenerateVariations()">
                        <i class="bi bi-arrow-repeat me-1"></i>{{translations.dashboard.regenerate}}
                    </button>
                </div>
            </div>
        </div>
    </div>

    {{> dashboard-footer}}
    <script src="/js/dashboard-templates.js"></script>
</body>
</html>
