<!DOCTYPE html>
<html lang="{{lang}}">
    {{> dashboard-header}}
<body>
    {{> dashboard-nav}}

<div class="container-fluid bg-light" style="min-height: 90vh;padding-bottom:50px">
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
                    ダッシュボード
                </a>
                <a href="#" class="list-group-item list-group-item-action">チャットボット一覧</a>
                <a href="#" class="list-group-item list-group-item-action">新規チャットボット作成</a>
                <a href="#" class="list-group-item list-group-item-action">ユーザー管理</a>
                <a href="#" class="list-group-item list-group-item-action">設定</a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h4>ダッシュボード</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card text-white bg-primary mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">総チャットボット</h5>
                                    <p class="card-text" id="totalChatbots">10</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-white bg-success mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">アクティブチャットボット</h5>
                                    <p class="card-text" id="activeChatbots">5</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-white bg-danger mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">エラーチャットボット</h5>
                                    <p class="card-text" id="errorChatbots">2</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <h5>チャットボット一覧</h5>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>名前</th>
                                        <th>ステータス</th>
                                        <th>作成日</th>
                                        <th>操作</th>
                                    </tr>
                                </thead>
                                <tbody id="chatbotList">
                                    <tr>
                                        <td>ボット1</td>
                                        <td><span class="badge bg-success">アクティブ</span></td>
                                        <td>2024/06/14</td>
                                        <td>
                                            <button class="btn btn-sm btn-info"><i class="fas fa-edit"></i> 編集</button>
                                            <button class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i> 削除</button>
                                        </td>
                                    </tr>
                                    <!-- 他のチャットボットもここにリストされます -->
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12 text-end">
                            <button class="btn btn-primary"><i class="fas fa-plus"></i> 新規チャットボット作成</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function() {
        $('#logout.nav-link').on('click', function(event) {
            event.preventDefault();
            $.ajax({
                url: '/user/logout',
                type: 'POST',
                success: function(response) {
                    Swal.fire({
                        title: '成功',
                        text: response.status,
                        icon: 'success'
                    }).then(() => {
                        window.location.href = '/authenticate';
                    });
                },
                error: function() {
                    Swal.fire({
                        title: 'エラー',
                        text: 'ログアウトに失敗しました',
                        icon: 'error'
                    });
                }
            });
        });
    });
</script>

</body>

</html>
