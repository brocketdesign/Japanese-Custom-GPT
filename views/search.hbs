<!DOCTYPE html>
<html lang="{{lang}}">
{{> dashboard-header seoTitle=seoTitle seoDescription=seoDescription}}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <link rel="stylesheet" href="/css/search.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
</head>

<body>
    {{> dashboard-nav}}

    <div class="search-container" id="searchPage">
        <!-- Search Header -->
        <div class="search-header">
            <div class="search-cover">
                <div class="search-header-content">
                    <div class="search-logo-wrapper">
                        <img src="/img/logo.webp" alt="Lamix Logo" class="search-logo">
                    </div>
                    
                    <div class="search-info">
                        <h1 class="search-title">{{translations.free_ai_chat_and_image_generation}}</h1>
                        <p class="search-subtitle">{{translations.ai_character_conversation}}</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search Bar Section -->
        <div class="search-bar-section">
            <form id="search-form" action="/search" method="GET" class="search-form">
                <div class="search-input-wrapper">
                    <i class="bi bi-search search-icon"></i>
                    <input 
                        type="text" 
                        name="q" 
                        id="search-input" 
                        class="search-input" 
                        placeholder="{{translations.searchPlaceholder}}" 
                        aria-label="Search characters and images"
                        value="{{query}}"
                    >
                    {{#if query}}
                        <button type="reset" class="search-clear" aria-label="Clear search">
                            <i class="bi bi-x-circle-fill"></i>
                        </button>
                    {{/if}}
                </div>
            </form>
        </div>

        <!-- Auth Prompt -->
        {{#if user.isTemporary}}
        <div class="auth-prompt">
            <div class="auth-prompt-content">
                <div class="auth-prompt-text">
                    <h3 class="auth-prompt-title">{{translations.unlock_premium_features}}</h3>
                    <p class="auth-prompt-description">{{translations.join_now_for_full_access}}</p>
                </div>
                <a href="/auth/login" onclick="openLoginForm(); return false;" class="auth-prompt-btn">
                    <i class="bi bi-person-plus"></i>
                    {{translations.sign_up_free}}
                </a>
            </div>
        </div>
        {{/if}}

        <!-- Search Results Section -->
        <div class="search-results-section">
            {{#if query}}
                <div class="search-header-info">
                    <h2 class="search-results-title">
                        <i class="bi bi-image"></i>
                        {{translations.result_image_query}} "<span class="search-query-highlight">{{query}}</span>"
                    </h2>
                    {{#if seoDescription}}
                        <p class="search-description">{{seoDescription}}</p>
                    {{/if}}
                </div>
            {{else}}
                <div class="search-header-info">
                    <h2 class="search-results-title">
                        <i class="bi bi-collection"></i>
                        {{translations.explore_latest_images}}
                    </h2>
                    <p class="search-welcome-message">{{translations.welcomeMessage}}</p>
                </div>
            {{/if}}

            <!-- Gallery Container - Dynamic Loading -->
            <div id="search-results-gallery" class="search-gallery">
                {{#if imageResults.length}}
                    {{#each imageResults}}
                        <div class="gallery-card-wrapper">
                            <div class="gallery-card">
                                {{#if isBlur}}
                                    <div class="gallery-image-container blur-container" onclick="handleClickRegisterOrPay(event,{{../user.isTemporary}})" type="button" role="button" tabindex="0">
                                        <img data-src="{{imageUrl}}" alt="{{chatName}} - {{prompt}}" class="gallery-image img-blur">
                                        <div class="blur-overlay">
                                            <i class="bi bi-lock-fill"></i>
                                        </div>
                                    </div>
                                {{else}}
                                    <a href="/character/slug/{{chatSlug}}?imageId={{_id}}" class="gallery-image-link">
                                        <div class="gallery-image-container">
                                            <img src="{{imageUrl}}" alt="{{chatName}} - {{prompt}}" class="gallery-image">
                                            <div class="gallery-overlay">
                                                <div class="overlay-content">
                                                    <i class="bi bi-eye"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                {{/if}}
                                
                                <div class="gallery-card-body">
                                    <div class="gallery-card-header">
                                        <a href="/character/slug/{{chatSlug}}" class="character-link">
                                            <img src="{{chatImageUrl}}" alt="{{chatName}} avatar" class="character-avatar">
                                            <div class="character-info">
                                                <h3 class="character-name">{{chatName}}</h3>
                                                <p class="image-title">{{lookupOrFirst title lang}}</p>
                                            </div>
                                        </a>
                                    </div>
                                    
                                    {{#if chatTags.length}}
                                        <div class="gallery-tags">
                                            {{#each chatTags}}
                                                <a href="/search?q={{this}}" class="tag-badge">{{this}}</a>
                                            {{/each}}
                                        </div>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    {{/each}}
                {{/if}}
            </div>

            <!-- Loading Indicator -->
            <div id="search-loading-indicator" class="text-center py-5" style="display: none;">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="text-muted mt-3">{{translations.loading}}</p>
            </div>

            {{#if totalPages}}
            <nav aria-label="Search results pagination" class="search-pagination">
                <ul class="pagination-list">
                    {{#if hasPrevPage}}
                        <li class="pagination-item">
                            <a href="/search?q={{query}}&page={{math currentPage '-' 1}}" class="pagination-link" aria-label="Previous page">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                    {{else}}
                        <li class="pagination-item disabled">
                            <span class="pagination-link">
                                <i class="bi bi-chevron-left"></i>
                            </span>
                        </li>
                    {{/if}}

                    <li class="pagination-item info">
                        <span class="pagination-link">{{currentPage}} / {{totalPages}}</span>
                    </li>

                    {{#if hasNextPage}}
                        <li class="pagination-item">
                            <a href="/search?q={{query}}&page={{math currentPage '+' 1}}" class="pagination-link" aria-label="Next page">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    {{else}}
                        <li class="pagination-item disabled">
                            <span class="pagination-link">
                                <i class="bi bi-chevron-right"></i>
                            </span>
                        </li>
                    {{/if}}
                </ul>
            </nav>
            {{/if}}

            {{#if query}}
                <div class="empty-state d-none">
                    <div class="empty-state-icon mx-auto">
                        <i class="bi bi-search"></i>
                    </div>
                    <h3 class="empty-state-title">{{translations.no_results_found_for}} "<span class="search-query-highlight">{{query}}</span>"</h3>
                    <p class="empty-state-message">Try searching for different keywords or explore popular categories below</p>
                </div>
            {{/if}}
        </div>



        <!-- Tags Section -->
        {{#if tags.length}}
        <div class="tags-section">
            <h3 class="tags-section-title">
                <i class="bi bi-tags"></i>
                {{translations.search_ai_character_by_tag}}
            </h3>
            <div class="tags-wrapper">
                {{#each tags}}
                    <a href="/search?q={{this.name}}" class="tag-item">
                        <i class="bi bi-tag"></i>
                        {{this.name}}
                    </a>
                {{/each}}
            </div>
        </div>
        {{/if}}
    </div>

    <!-- Hidden elements for backward compatibility -->
    <div id="chat-images-gallery" style="display: none;"></div>
    <div id="chat-videos-gallery" style="display: none;"></div>
    <div class="row mx-0" id="all-chats-images-gallery" style="display: none;"></div>

    {{> dashboard-footer}}

    <!-- Swiper for image preview -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="/js/chat-tool-swiper.js"></script>
    <script src="/js/character-infos.js"></script>

    <!-- Gallery Search Scripts -->
    <script src="/js/gallery-search.js"></script>

    <style>
        footer { display: inline !important; }
        .sticky-bottom, #footer-toolbar { display: inline-block !important; width: 100%; }
        .flagged-true { display: inline-block !important; }
    </style>

    <script>
        // Expose user data to global scope for gallery-search.js
        window.user = {
            _id: '{{user._id}}',
            subscriptionStatus: '{{user.subscriptionStatus}}',
            isTemporary: {{#if user.isTemporary}}true{{else}}false{{/if}},
            lang: '{{user.lang}}'
        };
        
        // Expose showNSFW setting for blur logic
        window.showNSFW = {{#if showNSFW}}true{{else}}false{{/if}};

        // Expose translations to global scope
        window.translations = {
            loading: '{{translations.loading}}',
            start_searching: '{{translations.start_searching}}',
            blurButton: '{{translations.blurButton}}',
            showContent: '{{translations.showContent}}'
        };

        document.addEventListener('DOMContentLoaded', function() {
            // Clear search input on clear button click
            const clearBtn = document.querySelector('.search-clear');
            if (clearBtn) {
                clearBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    document.getElementById('search-input').value = '';
                    document.getElementById('search-form').submit();
                });
            }

            // Apply blur effect to images
            document.querySelectorAll('.img-blur').forEach(function(img) {
                if (typeof blurImage === 'function') {
                    blurImage(img);
                }
            });

            // Initialize gallery search manager if available
            if (typeof GallerySearchManager !== 'undefined' && !window.gallerySearchManager) {
                window.gallerySearchManager = new GallerySearchManager();
                window.gallerySearchManager.loadFromURL();
            }
        });
    </script>
</body>
</html>
