    method: 'POST',
    headers: {
        'Content-Type': 'application/json',
        'X-API-Key': 'clx_your_api_key_here'
    },
    body: JSON.stringify({
        imageUrl: 'https://example.com/new-image.jpg',
        prompt: 'Sakura in a summer dress at the beach',
        nsfw: false
    })
});</code></pre>
