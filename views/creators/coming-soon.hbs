<!DOCTYPE html>
<html lang="{{translations.lang}}">
{{> dashboard-header}}
<body>
    {{> dashboard-nav}}

<section>
    <style>
    #coming-soon-hero {
        background: linear-gradient(135deg, #b58afe 0%, #6c5ce7 100%);
        background-size: cover;
        background-position: center;
        min-height: 400px;
        display: flex;
        align-items: center;
        color: white;
        text-align: center;
        padding-bottom: 4rem;
    }
    #coming-soon-hero h1 {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        text-shadow: 2px 4px 8px rgba(0,0,0,0.3);
    }
    #coming-soon-hero h2 {
        font-size: 1.5rem;
        font-weight: 500;
        margin-bottom: 1rem;
        opacity: 0.95;
    }
    #coming-soon-hero p {
        font-size: 1.15rem;
        margin-bottom: 2rem;
        opacity: 0.85;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }
    .coming-soon-icon {
        font-size: 5rem;
        margin-bottom: 1.5rem;
        animation: pulse 2s ease-in-out infinite;
    }
    @keyframes pulse {
        0%, 100% { transform: scale(1); opacity: 1; }
        50% { transform: scale(1.1); opacity: 0.8; }
    }
    .back-home-btn {
        display: inline-block;
        background: white;
        color: #6c5ce7;
        padding: 1rem 2.5rem;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        margin: 0.5rem;
    }
    .back-home-btn:hover {
        transform: scale(1.05);
        color: #b58afe;
        text-decoration: none;
        box-shadow: 0 6px 20px rgba(0,0,0,0.3);
    }
    .feature-preview {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 2rem;
        margin-top: 2rem;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }
    .feature-preview h3 {
        font-size: 1.25rem;
        margin-bottom: 1rem;
        opacity: 0.9;
    }
    .feature-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1rem;
        list-style: none;
        padding: 0;
        margin: 0;
    }
    .feature-list li {
        background: rgba(255, 255, 255, 0.15);
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .feature-list li i {
        color: #fdcb6e;
    }
    #footer-toolbar {
        display: none;
    }
    .sticky-bottom {
        display: none;
    }
    footer {
        display: inline !important;
    }
    @media (max-width: 768px) {
        #coming-soon-hero h1 {
            font-size: 2.5rem;
        }
        #coming-soon-hero h2 {
            font-size: 1.25rem;
        }
        #coming-soon-hero p {
            font-size: 1rem;
            padding: 0 1rem;
        }
        .coming-soon-icon {
            font-size: 4rem;
        }
        .feature-preview {
            margin: 2rem 1rem 0;
            padding: 1.5rem;
        }
    }
    </style>

    <div id="coming-soon-hero" class="shadow-0">
        <div class="container">
            <div class="row align-items-center h-100">
                <div class="col-12">
                    <div class="coming-soon-icon">
                        <i class="bi bi-rocket-takeoff"></i>
                    </div>
                    <h1 class="animate__animated" data-animate="animate__fadeInDown">
                        {{#if translations.creators.comingSoonTitle}}
                            {{translations.creators.comingSoonTitle}}
                        {{else}}
                            Creator Program
                        {{/if}}
                    </h1>
                    <h2 class="animate__animated" data-animate="animate__fadeInUp">
                        {{#if translations.creators.comingSoonSubtitle}}
                            {{translations.creators.comingSoonSubtitle}}
                        {{else}}
                            Coming Soon
                        {{/if}}
                    </h2>
                    <p class="animate__animated" data-animate="animate__fadeInUp">
                        {{#if translations.creators.comingSoonDescription}}
                            {{translations.creators.comingSoonDescription}}
                        {{else}}
                            We're working hard to bring you an amazing creator experience. Stay tuned for updates on our creator program that will let you monetize your content and connect with your audience.
                        {{/if}}
                    </p>

                    <div class="feature-preview">
                        <h3>
                            {{#if translations.creators.upcomingFeatures}}
                                {{translations.creators.upcomingFeatures}}
                            {{else}}
                                Upcoming Features
                            {{/if}}
                        </h3>
                        <ul class="feature-list">
                            <li><i class="bi bi-wallet2"></i> {{#if translations.creators.featureEarnings}}{{translations.creators.featureEarnings}}{{else}}Creator Earnings{{/if}}</li>
                            <li><i class="bi bi-graph-up"></i> {{#if translations.creators.featureAnalytics}}{{translations.creators.featureAnalytics}}{{else}}Analytics Dashboard{{/if}}</li>
                            <li><i class="bi bi-layers"></i> {{#if translations.creators.featureTiers}}{{translations.creators.featureTiers}}{{else}}Subscription Tiers{{/if}}</li>
                            <li><i class="bi bi-people-fill"></i> {{#if translations.creators.featureSubscribers}}{{translations.creators.featureSubscribers}}{{else}}Subscriber Management{{/if}}</li>
                            <li><i class="bi bi-star-fill"></i> {{#if translations.creators.featureExclusive}}{{translations.creators.featureExclusive}}{{else}}Exclusive Content{{/if}}</li>
                        </ul>
                    </div>

                    <div style="margin-top: 2rem;">
                        <a href="/dashboard" class="back-home-btn">
                            <i class="bi bi-house-door me-2"></i>
                            {{#if translations.creators.backToDashboard}}
                                {{translations.creators.backToDashboard}}
                            {{else}}
                                Back to Dashboard
                            {{/if}}
                        </a>
                        <a href="/character" class="back-home-btn">
                            <i class="bi bi-grid-3x3-gap me-2"></i>
                            {{#if translations.explore}}
                                {{translations.explore}}
                            {{else}}
                                Explore
                            {{/if}}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{{> dashboard-footer}}

<script>
    // Smooth scroll animations
    document.addEventListener('DOMContentLoaded', function() {
        const elements = document.querySelectorAll('[data-animate]');
        elements.forEach(el => {
            const animationClass = el.getAttribute('data-animate');
            el.classList.add(animationClass);
        });
    });
</script>
</body>
</html>
