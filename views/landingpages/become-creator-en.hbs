    <!-- AOS Animation Library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            once: true,
            offset: 100
        });

        // Earnings Calculator
        const slider = document.getElementById('subscriberSlider');
        const subscriberCount = document.getElementById('subscriberCount');
        const monthlyEarnings = document.getElementById('monthlyEarnings');
        const yearlyEarnings = document.getElementById('yearlyEarnings');

        slider.addEventListener('input', function() {
            const value = parseInt(this.value);
            const monthly = Math.round(value * 10 * 0.7); // $10/month * 70%
            subscriberCount.textContent = value;
            monthlyEarnings.textContent = monthly.toLocaleString();
            yearlyEarnings.textContent = (monthly * 12).toLocaleString();
        });
    </script>
