<!-- Footer Toolbar Partial -->
{{#if false}} <!-- Temporarily disabled -->
<div id="footer-toolbar" class="shadow-lg">
    <div class="d-flex justify-content-between align-items-center w-100 h-100">
        <!-- Left Items -->
        <div class="toolbar-side-items">
            <a id="toggle-chat-list" class="toolbar-item" style="width: calc(80vw/5);max-width: 100px;" href="#" onclick="toggleChatList()">
                <i class="bi bi-chat-left-text fs-5"></i>
                <div class="toolbar-label">{{translations.chatList}}</div>
            </a>
            <button type="button" class="toolbar-item border-0 bg-transparent" style="width: calc(80vw/5);max-width: 100px;" {{#if user.isTemporary}}onclick="openLoginForm()"{{else}} data-bs-toggle="modal" data-bs-target="#userPointsModal"{{/if}} title="{{userPointsTranslations.points.title}}">
                <i class="bi bi-coin fs-5"></i>
                <div class="toolbar-label">{{userPointsTranslations.points.title}}</div>
            </button>
        </div>

        <!-- Create Button (Center) -->
        <a class="toolbar-create-btn" href="#" {{#if user.isTemporary}} onclick="openLoginForm()"{{else}} onclick="loadCharacterCreationPage()"{{/if}}>
            <i class="bi bi-plus-circle"></i>
        </a>

        <!-- Right Items -->
        <div class="toolbar-side-items"> 
            <a {{#if user.isTemporary}} href="#" onclick="openLoginForm()"{{else}} href="/user/{{user._id}}"{{/if}} class="toolbar-item border-0 bg-transparent" style="width: calc(80vw/5);max-width: 100px;">
                 <i class="bi bi-person-circle fs-5"></i>
                 <div class="toolbar-label">{{translations.avatar.profile}}</div>
            </a>
            <a class="toolbar-item" {{#if user.isTemporary}} href="#" onclick="openLoginForm()"{{else}} onclick="loadSettingsPage()"{{/if}} style="width: calc(80vw/5);max-width: 100px;">
                <i class="bi bi-gear fs-5"></i>
                <div class="toolbar-label">{{translations.avatar.settings}}</div>
            </a>
        </div>
    </div>
</div>
{{/if}}
<!-- End Footer Toolbar Partial -->