        $('#chatImage').attr('src', chatImageUrl).show().addClass('on');
    }

    function checkFieldsAndShowForm() {
        if ($('#chatName').val().trim() !== '' && 
            $('#chatDescription').val().trim() !== '' && 
            $('#chatPurpose').val().trim() !== '') {
            $('#sendForm').show();
        } else {
