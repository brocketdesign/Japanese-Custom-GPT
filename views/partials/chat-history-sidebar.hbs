<!-- Main Chat List Sidebar -->
<div class="sidebar hidden bg-white shadow-lg d-flex flex-column border-end" style="max-width: 260px;">
    <div class="tools d-flex align-items-start flex-column sticky-top bg-white py-2 border-bottom">
        <div class="d-none w-100 m-2">
            <button class="menu-chat-sm d-sm-none btn bg-dark shadow-0"><i class="bi bi-list"></i></button>
            <button 
            class="new-chat d-sm-none btn btn-light"
            onclick="handleChatReset(this)"
            ><i class="bi bi-pencil-square"></i></button>
        </div>
        <div class="px-2 w-100">
            <span onclick="showDiscovery()" class="mb-1 d-block btn w-100 py-1 border-0 shadow-0 list-group-item list-group-item-action" style="border-radius: 6px; font-size: 0.8rem;">
                <i class="bi bi-chat me-2" style="font-size: 0.8rem;"></i>{{translations.chatList}}
            </span>
            <a href="/character" class="{{default isAdmin 'd-block'}} mb-1 btn w-100 py-1 border-0 shadow-0 list-group-item list-group-item-action" style="border-radius: 6px; font-size: 0.8rem;">
                <i class="bi bi-globe me-2" style="font-size: 0.8rem;"></i>{{translations.explore}}
            </a>
            <a href="#" onclick="loadCharacterCreationPage()" class="{{default isAdmin 'd-block'}} mb-1 btn w-100 py-1 border-0 shadow-0 list-group-item list-group-item-action text-start" style="border-radius: 6px; font-size: 0.8rem;">
                <i class="bi bi-plus me-2" style="font-size: 0.8rem;"></i>{{translations.createCharacter}}
            </a>
        </div>
        <div class="px-2 w-100 mt-1">
            <small class="text-muted fw-bold" style="font-size: 0.7rem;">{{translations.chatList}} <span id="user-chat-count">({{chats.length}})</span></small>
        </div>
    </div>
    <div id="chat-list" class="flex-grow-1 overflow-auto p-1" style="border-top: none;">
        <!-- Professional Loading State -->
        <div id="chat-list-spinner" class="chat-loading-state mx-auto text-center m-2 border border-light shadow-sm rounded" style="display: none;">
            <div class="loading-card">
                <div class="loading-header">
                    <div class="loading-pulse-icon">
                        <i class="bi bi-chat-dots"></i>
                    </div>
                    <div class="loading-text">
                        <h6 class="mb-1 text-secondary" style="font-size: 0.8rem;">{{translations.loadingChats}}</h6>
                        <small class="text-muted" style="font-size: 0.7rem;">{{translations.pleaseWait}}</small>
                    </div>
                </div>
                <div class="loading-progress-bar">
                    <div class="progress-fill"></div>
                </div>
                <div class="loading-dots-container">
                    <div class="loading-dot"></div>
                    <div class="loading-dot"></div>
                    <div class="loading-dot"></div>
                </div>
            </div>
        </div>
    </div>
</div>