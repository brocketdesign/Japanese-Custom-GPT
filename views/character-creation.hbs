<script>
    chatCreationId = '{{chatId}}';
    window.isTemporaryChat = {{isTemporaryChat}};
</script>

<!-- 1. キャラクター画像 -->
<div id="step1" class="step">
    <!-- Character Creation Form with Modal Sidebar Layout -->
    <div id="characterCreationForm" class="character-creation-sidebar-layout" style="overflow-y: hidden;">
        
        <!-- Modal Sidebar (Left Column) -->
        <div class="modal-sidebar-fixed">
            <!-- Scrollable Content -->
            <div class="modal-sidebar-content">
                <!-- Image Style Selection -->
                <div class="section-container">
                    <h4 class="section-header">{{translations.newCharacter.imageStyleSelectionTitle}}</h4>
                    <div class="section-content">
                        <p class="text-muted mb-3">
                            {{translations.newCharacter.imageStyleSelectionDescription}}
                        </p>
                        <label class="form-label fw-semibold">{{translations.newCharacter.image_model}}</label>
                        <div id="imageStyleSelectionCharacterCreation" class="d-flex flex-row flex-nowrap overflow-auto mb-3"></div>
                        <input type="hidden" id="modelId" name="modelId" required>
                        <input type="hidden" id="imageStyle" name="imageStyle" required>
                        <input type="hidden" id="imageModel" name="imageModel" required>
                        <input type="hidden" id="imageVersion" name="imageVersion" required>
                    </div>
                </div>

                <div class="section-container character-generator">
                    <h4 class="section-header">{{translations.newCharacter.characterPhysicalDescriptionTitle}}</h4>
                    <div class="section-content">
                        <p class="text-muted mb-4">
                            {{translations.newCharacter.characterPhysicalDescriptionDescription}}
                        </p>

                        <!-- Gender -->
                        <div class="mb-3">
                            <label for="gender" class="form-label fw-semibold"><i class="bi bi-asterisk text-danger me-2"></i>{{translations.newCharacter.genderLabel}}:</label>
                            <select class="form-select" id="gender" name="gender">
                                <option value="female" selected>{{translations.newCharacter.female}}</option>
                                <option value="male">{{translations.newCharacter.male}}</option>
                            </select>
                        </div>
                        
                        <!-- NSFW selector -->
                        <div class="mb-3">
                            <div class="nsfw-toggle-container" id="nsfwToggleContainer">
                                <div class="nsfw-label-container">
                                    <label class="nsfw-main-label" for="basic_nsfw">
                                        <i class="bi bi-exclamation-triangle nsfw-warning-icon"></i>
                                        {{translations.newCharacter.contentRating}}
                                    </label>
                                    <div class="nsfw-status-indicator disabled" id="nsfwStatusIndicator">
                                        {{translations.newCharacter.sfw}}
                                    </div>
                                </div>
                                
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="nsfw-description">
                                        {{translations.newCharacter.nsfwDescription}}
                                    </div>
                                    <div class="nsfw-switch">
                                        <input type="checkbox" id="basic_nsfw" name="basic_nsfw" disabled>
                                        <span class="nsfw-switch-slider"></span>
                                    </div>
                                </div>
                                
                                <!-- Premium upgrade prompt for non-subscribers -->
                                <div id="nsfwPremiumPrompt" class="nsfw-premium-prompt" style="display: none;">
                                    <i class="bi bi-star"></i>{{translations.newCharacter.nsfwPremiumRequired}}
                                    <a href="#" onclick="loadPlanPage()" class="alert-link">{{translations.upgrade_now}}</a>
                                </div>
                            </div>
                        </div>
                        <!-- Character Prompt Input -->
                        <div class="mb-3">
                            <label for="characterPrompt" class="form-label fw-semibold"><i class="bi bi-asterisk text-danger me-2"></i>{{translations.newCharacter.character_prompt}}</label>
                            <!-- List of tags -->
                            <div class="mb-2">
                                <div class="scroll-container">
                                    {{#each tags}}
                                        <span type="button" class="badge bg-light text-secondary me-1 add-tag fw-light border">{{this}}</span>
                                    {{/each}}
                                </div>
                            </div>
                            <textarea
                                class="form-control"
                                id="characterPrompt"
                                name="characterPrompt"
                                rows="4"
                                maxlength="2000"
                                placeholder="{{translations.newCharacter.character_appearance_description}}"
                            ></textarea>
                        </div>

                        <div class="mb-3 d-none">
                            <textarea
                                class="form-control"
                                id="enhancedPrompt"
                                name="enhancedPrompt"
                                rows="3"
                                readonly
                            ></textarea>
                        </div>

                        <!-- Field to upload an image with an area -->
                        <div class="mb-3">
                            <label for="imageUpload" class="form-label fw-semibold">{{translations.imageForm.uploadAreaLabel}}</label>
                            <div class="upload-area" id="uploadArea">
                                <input type="file" class="form-control" id="imageUpload" name="imageUpload" accept="image/*" onchange="previewImage(event)" disabled>
                            </div>
                            <img id="imagePreview" src="#" alt="Image Preview" style="display: none; max-width: 100%; margin-top: 10px;">
                            
                            <!-- Merge Face Toggle -->
                            <div class="mt-3" id="mergeFaceContainer" style="display: none;">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="enableMergeFace" name="enableMergeFace" disabled>
                                    <label class="form-check-label fw-semibold" for="enableMergeFace">
                                        <i class="bi bi-person-check me-2"></i>{{translations.newCharacter.enableMergeFace}}
                                    </label>
                                </div>
                                <small class="text-muted">{{translations.newCharacter.mergeFaceDescription}}</small>
                            </div>

                            <a href="#" onclick="loadPlanPage()" class="is-premium card p-2 custom-gradient-bg mt-3 rounded">{{translations.unlock_more_customization_fields}}</a>
                        </div>
                    </div>
                </div>

                <div class="section-container character-personnality-">
                    <!-- 3. Character Personality -->
                    <h4 class="section-header">{{translations.newCharacter.characterPersonalityTitle}}</h4>
                    <div class="section-content">
                        <p class="text-muted">
                            {{translations.newCharacter.characterPersonalityDescription}}
                        </p>
                        <p class="text-muted fw-bold mb-4">
                            <i class="bi bi-magic text-danger me-2"></i>{{translations.newCharacter.ai_generate_if_empty}}
                        </p>
                        <!-- Name -->
                        <div class="mb-3">
                            <label for="chatName" class="form-label fw-semibold">{{translations.newCharacter.nameLabel}}:</label>
                            <input type="text" class="form-control" id="chatName" name="chatName" placeholder="{{translations.newCharacter.namePlaceholder}}">
                        </div>
                        
                        {{! Hide the original textarea but keep it for form submission }}
                        <textarea id="chatPurpose" name="chatPurpose" style="display: none;"></textarea>
                        
                        {{! Keyword Cloud Sections }}
                        <div class="keyword-cloud-container">
                            <div class="keyword-section mb-4">
                                <h6 class="keyword-section-title mb-3">
                                    <i class="bi bi-person-heart me-2"></i>
                                    <span data-translate="newCharacter.keywordSections.personality"></span>
                                </h6>
                                <div class="keyword-tags" data-section="personality">
                                    {{! Keywords will be populated by JavaScript }}
                                </div>
                            </div>
                            
                            <div class="keyword-section mb-4">
                                <h6 class="keyword-section-title mb-3">
                                    <i class="bi bi-briefcase me-2"></i>
                                    <span data-translate="newCharacter.keywordSections.occupation"></span>
                                </h6>
                                <div class="keyword-tags" data-section="occupation">
                                    {{! Keywords will be populated by JavaScript }}
                                </div>
                            </div>
                            
                            <div class="keyword-section mb-4">
                                <h6 class="keyword-section-title mb-3">
                                    <i class="bi bi-palette me-2"></i>
                                    <span data-translate="newCharacter.keywordSections.hobbies"></span>
                                </h6>
                                <div class="keyword-tags" data-section="hobbies">
                                    {{! Keywords will be populated by JavaScript }}
                                </div>
                            </div>
                            
                            <div class="keyword-section mb-4">
                                <h6 class="keyword-section-title mb-3">
                                    <i class="bi bi-stars me-2"></i>
                                    <span data-translate="newCharacter.keywordSections.style"></span>
                                </h6>
                                <div class="keyword-tags" data-section="style">
                                    {{! Keywords will be populated by JavaScript }}
                                </div>
                            </div>
                            
                            <div class="keyword-section mb-4">
                                <h6 class="keyword-section-title mb-3">
                                    <i class="bi bi-gem me-2"></i>
                                    <span data-translate="newCharacter.keywordSections.traits"></span>
                                </h6>
                                <div class="keyword-tags" data-section="traits">
                                    {{! Keywords will be populated by JavaScript }}
                                </div>
                            </div>
                            
                            {{! Selected keywords display }}
                            <div class="selected-keywords-container mt-4">
                                <h6 class="mb-2"><i class="bi bi-check-circle me-2"></i>Selected Keywords:</h6>
                                <div id="selectedKeywords" class="selected-keywords-display">
                                    <span class="text-muted">Click keywords above to add them...</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Button to navigate to the generated image -->
                <div class="text-center my-4 d-lg-none">
                    <span 
                    type="button" 
                    id="navigateToImageButton" 
                    class="badge bg-transparent text-secondary shadow-sm border-light align-items-center justify-content-center mx-auto"
                    style="display: none;cursor: pointer;">
                        <i class="bi bi-arrow-right me-2"></i>{{translations.newCharacter.navigateToImageButton}}
                    </span>
                </div>
            </div>
            <!-- Sticky Generate Button -->
            <div class="modal-sidebar-footer">
                <button type="button" id="generateButton" class="btn custom-gradient-bg btn-lg text-white d-flex align-items-center justify-content-center w-100">
                    <i class="bi bi-magic me-2"></i>{{translations.newCharacter.generate_with_AI}}
                </button>
            </div>
        </div>

        <!-- Modal Main Content Area (Right Column) -->
        <div class="modal-main-content pb-0" id="modalMainContent">
            <!-- Mobile Navigation Header -->
            <div class="modal-main-content-header d-flex justify-content-start mt-2 d-lg-none">
                <span type="button" class="btn-back badge text-secondary shadow-sm border ms-4 me-2" id="backToSidebar">
                    <i class="bi bi-arrow-left"></i>
                </span>
                <label class="mb-0 fw-semibold">{{translations.newCharacter.generatedImageLabel}}</label>
            </div>
            
            <!-- Scrollable Content -->
            <div class="modal-main-content-scrollable">
                <!-- 3. Generated Image Display -->
                <div id="imageContainer" class="mb-4 w-100 text-center position-relative">
                    <!-- Spinner overlay -->
                    <div id="imageGenerationSpinner" class="position-absolute top-50 start-50 translate-middle" style="display: none; z-index: 10;">
                        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                    <img
                        id="generatedImage"
                        src="/img/default-character.png"
                        alt="{{translations.newCharacter.generatedImageAlt}}"
                        class="img-fluid"
                        style="width: 100%;"
                    >
                    <p id="imageGenerationDescription" class="text-muted mt-1 mb-0" style="display:none;">{{translations.newCharacter.start_chat_and_image_generation_description}}</p>
                </div>

                <div id="imageUploaderContainer" class="w-100" style="cursor: pointer;">
                    <!-- You can add an image uploader here if needed -->
                </div>
                
                <!-- Regenerate Images Button -->
                <div class="regenerateImages w-100 text-center my-3" style="display:none;">
                    <span 
                    type="button" 
                    id="regenerateImagesButton" 
                    class="badge bg-transparent shadow-sm text-secondary border-light align-items-center justify-content-center mx-auto"
                    style="cursor: pointer;">
                        <i class="bi bi-arrow-clockwise me-2"></i>{{translations.newCharacter.regenerate_images}}
                    </span>
                </div>
            </div>
            
            <!-- Fixed Chat Redirection Footer -->
            <div class="modal-main-content-footer" style="min-height: 78.5px;">
                <div class="chatRedirection w-100 text-center" style="display:none;">
                    <button type="button" id="redirectToChat" class="btn custom-gradient-bg btn-lg fw-bold">{{translations.newCharacter.start_chat}}</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.keyword-cloud-container {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.keyword-section-title {
    color: #495057;
    font-weight: 600;
    border-bottom: 2px solid #e9ecef;
    padding-bottom: 8px;
}

.keyword-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 16px;
}

.keyword-tag {
    display: inline-flex;
    align-items: center;
    padding: 6px 12px;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border: 2px solid #dee2e6;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
    color: #495057;
    cursor: pointer;
    transition: all 0.3s ease;
    user-select: none;
    position: relative;
    overflow: hidden;
}

.keyword-tag:hover {
    background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    border-color: #0056b3;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
}

.keyword-tag.selected {
    background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%);
    border-color: #1e7e34;
    color: white;
    transform: scale(1.05);
    box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
}

.keyword-tag.selected::after {
    content: '✓';
    position: absolute;
    right: 4px;
    top: 50%;
    transform: translateY(-50%);
    font-weight: bold;
    font-size: 0.75rem;
}

.selected-keywords-display {
    min-height: 50px;
    padding: 12px;
    background: #f8f9fa;
    border: 2px dashed #dee2e6;
    border-radius: 8px;
    font-size: 0.875rem;
    line-height: 1.5;
}

.selected-keywords-display .selected-keyword {
    display: inline-block;
    margin: 2px 4px;
    padding: 4px 8px;
    background: #007bff;
    color: white;
    border-radius: 12px;
    font-size: 0.75rem;
}

.keyword-section {
    border-bottom: 1px solid #f0f0f0;
    padding-bottom: 20px;
}

.keyword-section:last-child {
    border-bottom: none;
}

@media (max-width: 768px) {
    .keyword-tag {
        font-size: 0.8rem;
        padding: 5px 10px;
    }
    
    .keyword-section-title {
        font-size: 0.95rem;
    }
}
</style>
