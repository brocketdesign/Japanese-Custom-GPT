<!DOCTYPE html>
<html lang="{{lang}}">
{{> dashboard-header}}
<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #b58afe 0%, #6c5ce7 100%);
        --dark-bg: #0f0f1a;
        --card-bg: rgba(255, 255, 255, 0.05);
        --card-border: rgba(255, 255, 255, 0.1);
        --text-primary: #ffffff;
        --text-secondary: rgba(255, 255, 255, 0.7);
        --text-muted: rgba(255, 255, 255, 0.5);
    }

    body {
        background: var(--dark-bg);
        background-image: 
            radial-gradient(ellipse at top left, rgba(181, 138, 254, 0.15) 0%, transparent 50%),
            radial-gradient(ellipse at bottom right, rgba(108, 92, 231, 0.15) 0%, transparent 50%);
        min-height: 100vh;
        color: var(--text-primary);
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
    }

    .history-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 80px 16px 100px;
    }

    .history-header {
        margin-bottom: 32px;
    }

    .history-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 8px;
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .history-subtitle {
        color: var(--text-secondary);
        font-size: 1rem;
    }

    /* Filter Section */
    .filter-section {
        display: flex;
        gap: 12px;
        margin-bottom: 24px;
        flex-wrap: wrap;
        align-items: center;
    }

    .filter-btn {
        background: var(--card-bg);
        backdrop-filter: blur(20px);
        border: 1px solid var(--card-border);
        border-radius: 12px;
        padding: 10px 20px;
        color: var(--text-primary);
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .filter-btn:hover,
    .filter-btn.active {
        background: var(--primary-gradient);
        border-color: rgba(181, 138, 254, 0.5);
        transform: translateY(-2px);
    }

    /* Character Groups Section */
    .character-groups {
        margin-bottom: 32px;
    }

    .character-group-card {
        background: var(--card-bg);
        backdrop-filter: blur(20px);
        border: 1px solid var(--card-border);
        border-radius: 16px;
        padding: 16px;
        margin-bottom: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .character-group-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 40px rgba(181, 138, 254, 0.3);
    }

    .character-group-header {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .character-thumbnail {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid rgba(181, 138, 254, 0.5);
    }

    .character-info h3 {
        font-size: 1.2rem;
        margin: 0 0 4px 0;
    }

    .character-info p {
        color: var(--text-secondary);
        margin: 0;
        font-size: 0.9rem;
    }

    /* Content Grid */
    .content-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 16px;
        margin-top: 24px;
    }

    @media (min-width: 768px) {
        .content-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (min-width: 1024px) {
        .content-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    @media (min-width: 1400px) {
        .content-grid {
            grid-template-columns: repeat(5, 1fr);
        }
    }

    .content-item {
        position: relative;
        aspect-ratio: 1;
        border-radius: 12px;
        overflow: hidden;
        cursor: pointer;
        background: var(--card-bg);
        border: 1px solid var(--card-border);
        transition: all 0.3s ease;
    }

    .content-item:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
    }

    .content-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .content-item .video-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(0, 0, 0, 0.6);
        border-radius: 50%;
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
    }

    .content-badge {
        position: absolute;
        top: 8px;
        right: 8px;
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(10px);
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .badge-recent {
        background: linear-gradient(135deg, #00b894 0%, #00cec9 100%);
    }

    /* Loading and Empty States */
    .loading-spinner {
        text-align: center;
        padding: 40px;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
    }

    .empty-state i {
        font-size: 4rem;
        color: var(--text-muted);
        margin-bottom: 16px;
    }

    .empty-state h3 {
        color: var(--text-secondary);
        margin-bottom: 8px;
    }

    .empty-state p {
        color: var(--text-muted);
    }

    /* Modal Styles */
    .modal-content {
        background: var(--dark-bg);
        border: 1px solid var(--card-border);
        border-radius: 16px;
    }

    .modal-header {
        border-bottom: 1px solid var(--card-border);
    }

    .modal-body {
        color: var(--text-primary);
    }

    .detail-item {
        margin-bottom: 12px;
        padding: 12px;
        background: var(--card-bg);
        border-radius: 8px;
    }

    .detail-label {
        color: var(--text-muted);
        font-size: 0.85rem;
        margin-bottom: 4px;
    }

    .detail-value {
        color: var(--text-primary);
        font-size: 1rem;
    }

    .navigation-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 16px;
    }

    .nav-btn {
        background: var(--card-bg);
        border: 1px solid var(--card-border);
        color: var(--text-primary);
        padding: 8px 16px;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .nav-btn:hover:not(:disabled) {
        background: var(--primary-gradient);
        transform: translateY(-2px);
    }

    .nav-btn:disabled {
        opacity: 0.3;
        cursor: not-allowed;
    }
</style>

<body>
    {{> dashboard-nav}}

    <div class="history-container">
        <!-- Header -->
        <div class="history-header">
            <h1 class="history-title">
                <i class="bi bi-clock-history"></i> History
            </h1>
            <p class="history-subtitle">Browse all your generated images and videos</p>
        </div>

        <!-- Filters -->
        <div class="filter-section">
            <button class="filter-btn active" data-filter="all">
                <i class="bi bi-grid-3x3"></i> All Content
            </button>
            <button class="filter-btn" data-filter="recent">
                <i class="bi bi-stars"></i> Recent
            </button>
            <button class="filter-btn" data-filter="images">
                <i class="bi bi-image"></i> Images Only
            </button>
            <button class="filter-btn" data-filter="videos">
                <i class="bi bi-camera-video"></i> Videos Only
            </button>
            <select id="characterFilter" class="filter-btn" style="min-width: 200px;">
                <option value="">All Characters</option>
            </select>
        </div>

        <!-- Character Groups (shown when grouping by character) -->
        <div id="characterGroups" class="character-groups" style="display: none;">
            <!-- Populated dynamically -->
        </div>

        <!-- Content Grid -->
        <div id="contentGrid" class="content-grid">
            <div class="loading-spinner">
                <i class="bi bi-hourglass-split"></i>
                <p>Loading your content...</p>
            </div>
        </div>

        <!-- Load More -->
        <div id="loadMoreContainer" class="text-center mt-4" style="display: none;">
            <button id="loadMoreBtn" class="filter-btn">
                <i class="bi bi-arrow-down-circle"></i> Load More
            </button>
        </div>

        <!-- Empty State -->
        <div id="emptyState" class="empty-state" style="display: none;">
            <i class="bi bi-images"></i>
            <h3>No content yet</h3>
            <p>Start creating images and videos to build your history</p>
        </div>
    </div>

    <!-- Content Detail Modal -->
    <div class="modal fade" id="contentModal" tabindex="-1" aria-labelledby="contentModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="contentModalLabel">Content Details</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="modalContentArea">
                        <!-- Content will be loaded here -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{> dashboard-footer}}

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moment@2.29.1/moment.min.js"></script>
    <script src="/js/history-gallery.js"></script>
</body>
</html>
