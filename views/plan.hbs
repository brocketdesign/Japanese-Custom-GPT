    {{!-- Existing Carousel Code - Kept Intact --}}
    <style>
    .carousel-container {
        position: relative;
        width: 100%;
        max-width: 900px;
        margin: 0rem auto;
        overflow: hidden;
        padding: 5rem 0;
    }
    .carousel-cards {
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        height: 260px;
    }
    .carousel-card {
        position: absolute;
        transition: 
            transform 0.6s cubic-bezier(0.65, 0, 0.35, 1), 
            box-shadow 0.4s ease-in-out, 
            opacity 0.4s ease-in-out;
        border-radius: 1.5rem;
        box-shadow: 0 8px 32px rgba(0,0,0,0.18), 0 1.5px 8px rgba(0,0,0,0.08);
        background: #fff;
        overflow: hidden;
        max-height: 260px;
        max-width: 340px;
        opacity: 0;
        z-index: 0;
        width: 200px;
        cursor: pointer;
        filter: blur(0.5px);
        transform: translateX(150%) scale(0.85);
        pointer-events: none;
    }
    .carousel-card.active {
        transform: translateX(0) scale(1.15) translateY(-12px);
        box-shadow: 0 16px 48px rgba(0,0,0,0.22), 0 2px 12px rgba(0,0,0,0.12);
        opacity: 1;
        z-index: 2;
        filter: none;
    }
    .carousel-card.prev {
        transform: translateX(-90%) scale(0.95);
        opacity: 0.7;
        z-index: 1;
        filter: none;
        pointer-events: auto;
    }
    .carousel-card.next {
        transform: translateX(90%) scale(0.95);
        opacity: 0.7;
        z-index: 1;
        filter: none;
        pointer-events: auto;
    }
    .carousel-card img {
        width: 100%;
        height: auto;
        display: block;
        border-radius: 1.5rem;
        max-height: 260px;
        object-fit: cover;
    }
    @media (max-width: 700px) {
        .carousel-card, .carousel-card img {
            max-width: 45vw;
            max-height: auto;
        }
        .carousel-card.prev {
            transform: translateX(-70%) scale(0.95);
        }
        .carousel-card.next {
            transform: translateX(70%) scale(0.95);
        }
    }
    </style>
    <div class="carousel-container">
        <div class="carousel-cards" id="planCarouselCards">
            {{#each (range 1 5)}}
            <div class="carousel-card{{#if @first}} active{{/if}}" data-index="{{@index}}">
                <img src="/img/plan_slider/image{{this}}.webp" alt="Plan Image {{this}}">
            </div>
            {{/each}}
        </div>
    </div>
    <script>
    (function() {
        const cards = document.querySelectorAll('#planCarouselCards .carousel-card');
        let current = 0;
        
        function updateCards() {
            cards.forEach((card, idx) => {
                card.classList.remove('active', 'prev', 'next');
                if (idx === current) {
                    card.classList.add('active');
                } 
                else if (idx === (current - 1 + cards.length) % cards.length) {
                    card.classList.add('prev');
                } 
                else if (idx === (current + 1) % cards.length) {
                    card.classList.add('next');
                }
            });
        }
        function next() {
            current = (current + 1) % cards.length;
            updateCards();
        }
        function prev() {
            current = (current - 1 + cards.length) % cards.length;
            updateCards();
        }
        cards.forEach((card, idx) => {
            card.addEventListener('click', () => {
                if (idx === (current + 1) % cards.length) next();
                else if (idx === (current - 1 + cards.length) % cards.length) prev();
            });
        });
        setInterval(next, 3500);
        updateCards(); 
    })();
    </script>
