<!DOCTYPE html>
<html lang="ja">
       {{> dashboard-header}}
<body>
    {{> dashboard-nav}}

<style>

</style>
<div class="container mt-4">
  <div class="row">

    <!-- Chat Image Section -->
    <div class="col-lg-8 mb-4">
      <div class="card">
        <img src="{{#if isBlur}}/img/nsfw-blurred.jpg{{else}}{{image.imageUrl}}{{/if}}" class="card-img-top" alt="{{image.prompt}}" style="max-height:400px;width:auto;object-fit:contain;">
        <div class="card-body">
          <h5 class="card-title">{{image.prompt}}</h5>
          <p class="card-text">{{image.comment}}</p>
          <p class="text-muted">投稿日: <span class="jp-date">{{image.createdAt}}</span></p>
          <div class="d-flex justify-content-between align-items-center">
            <button class="btn btn-light shadow-0 image-fav {{#if  (includesObjectId image.likedBy user._id) }}liked{{/if}}" data-id="{{image._id}}">
              <i class="bi bi-heart-fill me-2"></i>いいね (<span class="ct">{{default image.likes 0}}</span>)
            </button>
            <a href="/chat/{{chat._id}}" class="btn btn-outline-secondary"> <i class="bi bi-chat-dots me-2"></i> チャットする</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Chat Profile Section -->
    <div class="col-lg-4 mb-4">
      <div class="card">
        <div class="card-body text-center">
          <div class="chat-profile mt-4">
            <div class="row mb-3">
              <div id="chatProfileSection" class="text-center">
                <div class="mx-auto p-auto text-center d-flex align-items-center justify-content-center position-relative mb-2">
                  <a href="/chat/{{chat._id}}" class="text-secondary" style="text-decoration:none;">  
                    <img src="{{default chat.thumbnailUrl '/img/default-thumbnail.png'}}" alt="Chat Thumbnail" class="rounded-circle" 
                    style="width: 100px; height: 100px; object-fit: cover; object-position: top;">
                  </a>
                </div>
                <a href="/chat/{{chat._id}}" class="text-secondary" style="text-decoration:none;">
                  <h2>{{chat.name}}</h2>
                </a>
                <a href="/chat/{{chat._id}}" class="btn btn-outline-secondary"> <i class="bi bi-chat-dots me-2"></i> チャットする</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Other Images Section -->
  <div class="container">
    <div class="row">
      <div class="col-12 mt-4">
        <h4>他の画像</h4>
        <hr>
        <div class="container">
          <div class="row" id="chat-images-gallery"></div>
          <div class="d-flex justify-content-center mt-4" id="chat-images-pagination-controls"></div>
        </div>
      </div>
    </div>
  </div>
</div>


 {{> dashboard-footer}}


</body>
<script>
  $(document).ready(function () {
    const chatId =`{{chatId}}`
    loadChatImages(chatId, 1);
  });
  </script>
</html>
