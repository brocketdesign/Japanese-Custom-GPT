    <!-- Hero Section -->
    <section id="hero-section" class="position-relative overflow-hidden">
        <div class="animated-gradient-bg"></div>
        <div class="container py-5">
            <div class="row align-items-center min-vh-100">
                <div class="col-lg-6 text-white position-relative z-index-2" data-aos="fade-right">
                    <div class="badge bg-white text-primary mb-3 px-3 py-2 rounded-pill">
                        <i class="bi bi-stars me-2"></i>Powered by Advanced AI Technology
                    </div>
                    <h1 class="display-3 fw-bold mb-4 hero-title">
                        Create. Customize. Connect.<br/>
                        <span class="gradient-text">Your AI Companion Awaits.</span>
