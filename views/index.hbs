                {{translations.lp.cta_button3}}
            </a>
        </div>
    </div>
</section>

<!-- Desktop Images (Hidden on Mobile) -->
<div class="d-block">
    <div class="row flex-nowrap overflow-auto" style="white-space: nowrap;">
        {{#each (range 4 10)}}
            <div class="col-4 col-sm-3 col-lg-2 px-0" style="display: inline-block;">
