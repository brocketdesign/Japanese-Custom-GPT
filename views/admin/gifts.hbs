<script>
  // Helper function for notifications (using custom Tailwind modal)
  function showNotification(message, type = 'success') {
    const modal = $('#notificationModal');
    const icon = $('#notificationIcon');
    const title = $('#notificationTitle');
    const messageEl = $('#notificationMessage');
    
    title.text(type === 'success' ? '成功' : 'エラー');
    messageEl.text(message);
    
    if (type === 'success') {
      icon.removeClass('bg-red-100').addClass('bg-green-100');
      icon.html('<svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>');
    } else {
      icon.removeClass('bg-green-100').addClass('bg-red-100');
      icon.html('<svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>');
    }
    
    modal.removeClass('hidden');
    
    // Auto-hide after 2 seconds for success messages
    if (type === 'success') {
      setTimeout(() => {
        modal.addClass('hidden');
      }, 2000);
    }
  }

  // Store gifts data globally for easier access
  let currentGifts = [];
  let reorderSortable = null;
  let deleteGiftId = null;
  const reorderModal = $('#reorderModal');
  const newGiftModal = $('#newGiftModal');
  const deleteModal = $('#deleteModal');

  function renderGiftsTable(gifts) {
    const tableBody = $('#giftsTableBody');
    tableBody.empty();
    if (!gifts || gifts.length === 0) {
        tableBody.append('<tr><td colspan="7" class="text-center py-4">No gifts found.</td></tr>');
      return;
    }
    // Ensure gifts are sorted by the 'order' field before rendering
    const sortedGifts = gifts.sort((a, b) => (a.order || 0) - (b.order || 0));

    sortedGifts.forEach(gift => {
      console.log('Rendering gift:', gift);
      const row = `
        <tr data-id="${gift._id}" class="border-b border-gray-200 hover:bg-gray-100">
          <td class="py-3 px-4 text-left handle"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 inline-block mr-2"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" /></svg> ${gift.order !== undefined ? gift.order : 'N/A'}</td>
          <td class="py-3 px-4 text-left"><img src="${gift.image || '/img/placeholder-image-2.gif'}" alt="${gift.title}" class="w-20 h-20 object-cover rounded"></td>
          <td class="py-3 px-4 text-left font-semibold">${gift.title}</td>
          <td class="py-3 px-4 text-left truncate max-w-xs">${gift.description || ''}</td>
          <td class="py-3 px-4 text-left max-w-xs">${gift.prompt || ''}</td>
          <td class="py-3 px-4 text-left font-bold text-blue-600">${gift.cost || 0}</td>
          <td class="py-3 px-4 text-center">
            <button class="preview-btn text-blue-500 hover:text-blue-700 mr-2" data-id="${gift._id}">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 inline-block"><path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" /></svg>
            </button>
            <button class="edit-btn text-yellow-500 hover:text-yellow-700 mr-2" data-id="${gift._id}">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 inline-block"><path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" /></svg>
            </button>
            <button class="delete-btn text-red-500 hover:text-red-700" data-id="${gift._id}">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 inline-block"><path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12.56 0c1.153 0 2.243.096 3.222.261m3.478-.397L12 4.648l-1.176-.754M12 4.648V2.25m0 0l-.375.375M12 2.25l.375.375M12 15.75v2.25M12 21v-2.25" /></svg>
            </button>
          </td>
        </tr>
      `;
      tableBody.append(row);
    });
    attachActionListeners();
  }

  function attachActionListeners() {
    $('.preview-btn').off('click').on('click', function() {
      var id = $(this).data('id');
      $.ajax({
        url: '/api/gifts/' + id,
        type: 'GET',
        success: function(gift) {
          $('#previewImage').attr('src', gift.image || '/img/placeholder-image-2.gif');
          $('#previewTitle').text(gift.title);
          $('#previewDescription').text(gift.description || '');
                $('#previewPrompt').text('プロンプト: ' + (gift.prompt || '未設定'));
          $('#previewCost').text('コスト: ' + (gift.cost || 0));
          $('#previewModal').removeClass('hidden');
        },
        error: function() {
          showNotification('Error fetching gift details.', 'error');
        }
      });
    });

    $('.edit-btn').off('click').on('click', function() {
      var id = $(this).data('id');
      $.ajax({
        url: '/api/gifts/' + id,
        type: 'GET',
        success: function(gift) {
          $('#editId').val(gift._id);
          $('#editTitle').val(gift.title);
          $('#editDescription').val(gift.description || '');
            $('#editPrompt').val(gift.prompt || '');
          $('#editCost').val(gift.cost || 0);
          $('#editImage').val('');
          $('#editModal').removeClass('hidden');
        },
        error: function() {
          showNotification('Error fetching gift details for editing.', 'error');
        }
      });
    });

    $('.delete-btn').off('click').on('click', function() {
      deleteGiftId = $(this).data('id');
      deleteModal.removeClass('hidden');
    });

    $('#reorderGiftsBtn').on('click', function() {
      const grid = $('#reorderGiftsGrid');
      grid.empty();
      const sortedGiftsForModal = [...currentGifts].sort((a, b) => (a.order || 0) - (b.order || 0));

      sortedGiftsForModal.forEach(gift => {
        const item = `
          <div data-id="${gift._id}" class="border p-2 rounded shadow-sm bg-white cursor-grab flex flex-col items-center text-center">
            <img src="${gift.image || '/img/placeholder-image-2.gif'}" alt="${gift.title}" class="w-24 h-24 object-cover rounded mb-2">
            <p class="text-xs font-semibold">${gift.title}</p>
            <p class="text-xs text-gray-500">Order: ${gift.order !== undefined ? gift.order : 'N/A'}</p>
            <p class="text-xs text-blue-600">Cost: ${gift.cost || 0}</p>
          </div>
        `;
        grid.append(item);
      });

      if (reorderSortable) {
        reorderSortable.destroy();
      }
      reorderSortable = new Sortable(document.getElementById('reorderGiftsGrid'), {
        animation: 150,
        ghostClass: 'sortable-ghost',
        chosenClass: 'sortable-chosen',
      });
      reorderModal.removeClass('hidden');
    });

    $('#closeReorderModal, #cancelReorderBtn').on('click', function() {
      reorderModal.addClass('hidden');
    });

    $('#saveOrderBtn').on('click', function() {
      if (!reorderSortable) return;
      const orderedIds = reorderSortable.toArray();

      $.ajax({
        url: '/api/gifts/reorder',
        type: 'POST',
        contentType: 'application/json',
        data: JSON.stringify({ orderedIds: orderedIds }),
        success: function(response) {
          showNotification('Gifts reordered successfully.');
          reorderModal.addClass('hidden');
          $.ajax({
            url: '/api/gifts',
            type: 'GET',
            success: function(gifts) {
              currentGifts = gifts;
              renderGiftsTable(currentGifts);
            },
            error: function() {
              showNotification('Error re-fetching gifts after reorder.', 'error');
            }
          });
        },
        error: function(xhr) {
          const errorMsg = xhr.responseJSON && xhr.responseJSON.message ? xhr.responseJSON.message : 'Error reordering gifts.';
          showNotification(errorMsg, 'error');
        }
      });
    });
  }

  $(document).ready(function() {
    const previewModal = $('#previewModal');
    const editModal = $('#editModal');

    // Load gifts on page load
    $.ajax({
      url: '/api/gifts',
      type: 'GET',
      success: function(gifts) {
        currentGifts = gifts.sort((a, b) => (a.order || 0) - (b.order || 0));
        renderGiftsTable(currentGifts);
      },
      error: function() {
        showNotification('Error fetching gifts.', 'error');
        renderGiftsTable([]);
      }
    });

    $('#closePreviewModal').on('click', function() {
      previewModal.addClass('hidden');
    });

    $('#newGiftBtn').on('click', function() {
      newGiftModal.removeClass('hidden');
    });

    $('#closeNewGiftModal, #cancelNewGiftBtn').on('click', function() {
      newGiftModal.addClass('hidden');
      document.getElementById('newGiftForm').reset();
    });

    $('#newGiftForm').on('submit', function(e) {
      e.preventDefault();
      const formData = new FormData(this);
      
      $.ajax({
        url: '/api/gifts/create',
        type: 'POST',
        data: formData,
        contentType: false,
        processData: false,
        success: function() {
          showNotification('ギフトが作成されました。', 'success');
          newGiftModal.addClass('hidden');
          document.getElementById('newGiftForm').reset();
          setTimeout(() => location.reload(), 1500);
        },
        error: function() {
          showNotification('ギフトの作成中にエラーが発生しました。', 'error');
        }
      });
    });

    $('#closeDeleteModal, #cancelDeleteBtn').on('click', function() {
      deleteModal.addClass('hidden');
      deleteGiftId = null;
    });

    $('#confirmDeleteBtn').on('click', function() {
      if (deleteGiftId) {
        $.ajax({
          url: '/api/gifts/' + deleteGiftId,
          type: 'DELETE',
          success: function() {
            showNotification('Gift deleted successfully.');
            currentGifts = currentGifts.filter(g => g._id !== deleteGiftId);
            renderGiftsTable(currentGifts);
            deleteModal.addClass('hidden');
            deleteGiftId = null;
          },
          error: function() {
            showNotification('Error deleting gift.', 'error');
          }
        });
      }
    });

    $('#closeNotificationBtn').on('click', function() {
      $('#notificationModal').addClass('hidden');
    });

    $(document).on('keydown', function(event) {
        if (event.key === "Escape") {
            if (!previewModal.hasClass('hidden')) {
                previewModal.addClass('hidden');
            }
            if (!editModal.hasClass('hidden')) {
                editModal.addClass('hidden');
            }
            if (!reorderModal.hasClass('hidden')) {
                reorderModal.addClass('hidden');
            }
            if (!newGiftModal.hasClass('hidden')) {
                newGiftModal.addClass('hidden');
                document.getElementById('newGiftForm').reset();
            }
            if (!deleteModal.hasClass('hidden')) {
                deleteModal.addClass('hidden');
                deleteGiftId = null;
            }
            if (!$('#notificationModal').hasClass('hidden')) {
                $('#notificationModal').addClass('hidden');
            }
        }
    });
  });
</script>
</body>
</html>
