<!-- Footer Toolbar Partial -->
<div id="footer-toolbar" class="shadow-lg">
    <div class="d-flex justify-content-between align-items-center w-100 h-100">
        <!-- Left Items -->
        <div class="toolbar-side-items">
            <a id="toggle-chat-list" class="toolbar-item" style="width: calc(80vw/5);max-width: 100px;" href="#" onclick="toggleChatList()">
                <i class="bi bi-chat-left-text fs-5"></i>
                <div class="toolbar-label">{{translations.chatList}}</div>
            </a>
            <button type="button" class="toolbar-item border-0 bg-transparent" style="width: calc(80vw/5);max-width: 100px;" data-bs-toggle="modal" data-bs-target="#userPointsModal" title="{{userPointsTranslations.points.title}}">
                <i class="bi bi-coin fs-5"></i>
                <div class="toolbar-label">{{userPointsTranslations.points.title}}</div>
            </button>
        </div>

        <!-- Create Button (Center) -->
        <a class="toolbar-create-btn" href="#" {{#if user.isTemporary}} onclick="openLoginForm()"{{else}} onclick="loadCharacterCreationPage()"{{/if}}>
            <i class="bi bi-plus-lg"></i>
        </a>

        <!-- Right Items -->
        <div class="toolbar-side-items">
            <button type="button" class="toolbar-item border-0 bg-transparent" style="width: calc(80vw/5);max-width: 100px;" data-bs-toggle="modal" data-bs-target="#leaderboardModal" title="{{#if translations.leaderboards_title}}{{translations.leaderboards_title}}{{else}}Leaderboards{{/if}}">
                <i class="bi bi-trophy-fill fs-5"></i>
                <div class="toolbar-label">{{#if translations.leaderboard_short}}{{translations.leaderboard_short}}{{else}}Board{{/if}}</div>
            </button>
            <a class="toolbar-item" href="#" style="width: calc(80vw/5);max-width: 100px;" onclick="loadSettingsPage()">
                <i class="bi bi-gear fs-5"></i>
                <div class="toolbar-label">{{translations.avatar.settings}}</div>
            </a>
        </div>
    </div>
</div>
<!-- End Footer Toolbar Partial -->