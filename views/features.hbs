<!DOCTYPE html>
<html lang="{{translations.lang}}">
   {{> dashboard-header}}
<body>
    {{> dashboard-nav}}

<section>
    <style>
    #features-intro {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        background-size: cover;
        background-position: center;
        min-height: 500px;
        display: flex;
        align-items: center;
        color: white;
    }
    #features-intro h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }
    #features-intro p {
        font-size: 1.25rem;
        margin-bottom: 2rem;
        opacity: 0.95;
    }
    .feature-card {
        transition: all 0.3s ease;
        border: 1px solid rgba(102, 126, 234, 0.2);
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        height: 100%;
        background: linear-gradient(145deg, rgba(40, 40, 50, 0.95), rgba(30, 30, 40, 0.98));
        border-radius: 16px;
    }
    .feature-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 30px rgba(102, 126, 234, 0.25);
        border-color: rgba(102, 126, 234, 0.4);
    }
    .feature-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    .feature-card h4 {
        color: #ffffff;
        font-weight: 700;
        margin-bottom: 1rem;
        font-size: 1.3rem;
    }
    .feature-card p {
        color: rgba(255, 255, 255, 0.85);
        font-size: 0.95rem;
        margin-bottom: 1.5rem;
        flex-grow: 1;
        line-height: 1.6;
    }
    .feature-link {
        display: inline-block;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }
    .feature-link:hover {
        transform: scale(1.05);
        color: white;
        text-decoration: none;
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.6);
    }
    
    /* Section backgrounds for dark mode */
    section.py-5 {
        background: transparent;
    }
    section.bg-light {
        background: rgba(30, 30, 40, 0.5) !important;
    }
    .lead {
        color: rgba(255, 255, 255, 0.8);
    }
    section .text-muted {
        color: rgba(255, 255, 255, 0.7) !important;
    }
    section h5.fw-bold {
        color: #ffffff;
    }
    #footer-toolbar {
        display: none;
    }
    @media (max-width: 768px) {
        #features-intro h1 {
            font-size: 2rem;
        }
        #features-intro p {
            font-size: 1rem;
        }
    }
    </style>
    
    <div id="features-intro" class="shadow-0">
        <div class="container">
            <div class="row align-items-center h-100">
                <div class="col-12 text-center">
                    <h1 class="animate__animated" data-animate="animate__fadeInDown">
                        {{translations.features_page.heading}}
                    </h1>
                    <p class="animate__animated" data-animate="animate__fadeInUp">
                        {{translations.features_page.subheading}}
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Grid Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            {{#each features}}
            <div class="col-md-6 col-lg-4">
                <div class="card feature-card h-100">
                    <div class="card-body d-flex flex-column text-center p-4">
                        <div class="feature-icon">
                            <i class="{{icon}}"></i>
                        </div>
                        <h4 class="card-title">{{title}}</h4>
                        <p class="card-text">{{description}}</p>
                        <a href="{{link}}" class="feature-link mt-auto">
                            {{../translations.features_page.explore_button}} <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="fw-bold mb-4 u-color-grad">
                    {{translations.features_page.cta_heading}}
                </h2>
                <p class="lead mb-4">
                    {{translations.features_page.cta_description}}
                </p>
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center align-items-center">
                    <a href="#" onclick="openLoginForm()" class="btn custom-gradient-bg text-white btn-lg px-5 py-3 fw-bold" role="button" style="border-radius: 50px;">
                        {{translations.lp.cta_button}}
                    </a>
                    <a href="/landingpage/home-en" class="btn btn-outline-primary btn-lg px-5 py-3 fw-bold" role="button" style="border-radius: 50px;">
                        <i class="fas fa-info-circle me-2"></i>{{#if translations.features_page.learn_more}}{{translations.features_page.learn_more}}{{else}}Learn More{{/if}}
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Our Features Section -->
